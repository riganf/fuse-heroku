#!/bin/sh
# https://codeload.github.com/libfuse/libfuse/zip/fuse-3.9.1
indent() {
  sed -u 's/^/       /'
}

echo "-----> Install fuse"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="https://github.com/libfuse/libfuse/releases/download/fuse-3.9.3/fuse-3.9.3.tar.xz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p fuse
cd fuse
curl -L --silent $DOWNLOAD_URL | tar xJ --strip-components=1

echo "exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/fuse.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:${HOME}/vendor/fuse"' >> $PROFILE_PATH
